@model JetwaysAdmin.UI.ViewModel.DashboardbookingViewModel
@using System.Text.Json
@using System.Linq

@{
    Layout = "~/Views/Shared/Admin.cshtml";
    ViewData["Title"] = "Booking Dashboard";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<!-- Loading Overlay -->
<div id="loadingOverlay" style="display:none; position:fixed; inset:0; background:rgba(255,255,255,0.75); z-index:9999;">
    <div style="position:absolute; top:50%; left:50%; transform:translate(-50%,-50%); text-align:center;">
        <div class="spinner-border" role="status"></div>
        <div class="mt-2">Loading bookings...</div>
    </div>
</div>

<div class="container-fluid mt-3">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">Booking Dashboard</h4>

        <a data-loading="true"
           class="btn btn-success"
           asp-action="ExportExcel"
           asp-route-fromDate="@Model.FromDate"
           asp-route-toDate="@Model.ToDate"
           asp-route-companyName="@Model.CompanyName"
           asp-route-consultant="@Model.Consultant">
            Export Excel
        </a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <!-- Filters -->
    <form method="get" class="row g-2 mb-4">
        <div class="col-md-2">
            <label class="form-label">From Date</label>
            <input type="date" name="fromDate" class="form-control"
                   value="@Model.FromDate?.ToString("yyyy-MM-dd")" />
        </div>

        <div class="col-md-2">
            <label class="form-label">To Date</label>
            <input type="date" name="toDate" class="form-control"
                   value="@Model.ToDate?.ToString("yyyy-MM-dd")" />
        </div>

        <div class="col-md-3">
            <label class="form-label">Company</label>
            <input type="text" name="companyName" class="form-control"
                   placeholder="CompanyName" value="@Model.CompanyName" />
        </div>

        <div class="col-md-3">
            <label class="form-label">Consultant</label>
            <input type="text" name="consultant" class="form-control"
                   placeholder="Consultant" value="@Model.Consultant" />
        </div>

        <div class="col-md-2 d-flex align-items-end">
            <button class="btn btn-primary w-100">Filter</button>
        </div>
       @*  <a data-loading="true"
           class="btn btn-success"
           asp-action="ExportExcel"
           asp-route-fromDate="@Model.FromDate"
           asp-route-toDate="@Model.ToDate"
           asp-route-companyName="@Model.CompanyName"
           asp-route-consultant="@Model.Consultant">
            Export Excel
        </a> *@

        <input type="hidden" name="pageNumber" value="1" />
        <input type="hidden" name="pageSize" value="@Model.PageSize" />
    </form>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-2">
            <div class="card text-bg-primary">
                <div class="card-body">
                    <div class="small">Total Bookings (Page)</div>
                    <div class="fs-3">@Model.TotalBookings</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-2">
            <div class="card text-bg-success">
                <div class="card-body">
                    <div class="small">Total Revenue (Page)</div>
                    <div class="fs-3">@Model.TotalRevenue.ToString("N0")</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-2">
            <div class="card text-bg-warning">
                <div class="card-body">
                    <div class="small">Bookings Last 30 Days (Page)</div>
                    <div class="fs-3">@Model.BookingsLast30Days</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-2">
            <div class="card text-bg-info">
                <div class="card-body">
                    <div class="small">Avg Ticket Value (Page)</div>
                    <div class="fs-3">@Model.AverageTicketValue.ToString("N0")</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="row mb-4">
        <div class="col-md-8 mb-2">
            <div class="card">
                <div class="card-header">Bookings by Month (Page)</div>
                <div class="card-body">
                    <canvas id="bookingsByMonthChart" height="120"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-2">
            <div class="card">
                <div class="card-header">Top Routes (Page)</div>
                <div class="card-body">
                    <canvas id="topRoutesChart" height="120"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="card">
        <div class="card-header">Bookings (Page @Model.PageNumber)</div>
        <div class="card-body table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th>BookingID</th>
                        <th>RecordLocator</th>
                        <th>BookedDate</th>
                        <th>Origin</th>
                        <th>Destination</th>
                        <th>TotalAmount</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Bookings != null && Model.Bookings.Any())
                    {
                        foreach (var b in Model.Bookings)
                        {
                            <tr>
                                <td>@b.BookingID</td>
                                <td>@b.RecordLocator</td>
                                <td>@(b.BookedDate?.ToString("dd-MMM-yyyy HH:mm"))</td>
                                <td>@b.Origin</td>
                                <td>@b.Destination</td>
                                <td>@(b.TotalAmount?.ToString("N0"))</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4">
                                <div class="text-muted">
                                    <div class="fw-semibold">No bookings found</div>
                                    <div class="small">Try changing date range / company / consultant filters.</div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Pagination -->
            <div class="d-flex justify-content-between align-items-center mt-3">
                <a data-loading="true"
                   class="btn btn-outline-secondary @(Model.PageNumber <= 1 ? "disabled" : "")"
                   asp-action="Index"
                   asp-route-pageNumber="@(Model.PageNumber - 1)"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-fromDate="@Model.FromDate"
                   asp-route-toDate="@Model.ToDate"
                   asp-route-companyName="@Model.CompanyName"
                   asp-route-consultant="@Model.Consultant">
                    Previous
                </a>

                <span>Page @Model.PageNumber</span>

                <a data-loading="true"
                   class="btn btn-outline-secondary @(Model.IsLastPage ? "disabled" : "")"
                   asp-action="Index"
                   asp-route-pageNumber="@(Model.PageNumber + 1)"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-fromDate="@Model.FromDate"
                   asp-route-toDate="@Model.ToDate"
                   asp-route-companyName="@Model.CompanyName"
                   asp-route-consultant="@Model.Consultant">
                    Next
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showLoading() {
            const el = document.getElementById("loadingOverlay");
            if (el) el.style.display = "block";
        }
        function hideLoading() {
            const el = document.getElementById("loadingOverlay");
            if (el) el.style.display = "none";
        }

        document.addEventListener("DOMContentLoaded", function () {
            hideLoading();
            document.querySelectorAll("form").forEach(f => f.addEventListener("submit", () => showLoading()));
            document.querySelectorAll("a[data-loading='true']").forEach(a => a.addEventListener("click", () => showLoading()));
        });

        const monthLabels = @Html.Raw(JsonSerializer.Serialize(Model.BookingsByMonth.Select(x => x.Label)));
        const monthValues = @Html.Raw(JsonSerializer.Serialize(Model.BookingsByMonth.Select(x => x.Value)));

        new Chart(document.getElementById('bookingsByMonthChart'), {
            type: 'line',
            data: { labels: monthLabels, datasets: [{ label: 'Bookings', data: monthValues }] },
            options: { responsive: true, maintainAspectRatio: false }
        });

        const routeLabels = @Html.Raw(JsonSerializer.Serialize(Model.TopRoutes.Select(x => x.Label)));
        const routeValues = @Html.Raw(JsonSerializer.Serialize(Model.TopRoutes.Select(x => x.Value)));

        new Chart(document.getElementById('topRoutesChart'), {
            type: 'bar',
            data: { labels: routeLabels, datasets: [{ label: 'Bookings', data: routeValues }] },
            options: { indexAxis: 'y', responsive: true, maintainAspectRatio: false }
        });
    </script>
}
