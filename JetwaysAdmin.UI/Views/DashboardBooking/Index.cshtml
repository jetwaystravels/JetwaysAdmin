@model JetwaysAdmin.UI.ViewModel.DashboardbookingViewModel
@using System.Text.Json

@{
    ViewData["Title"] = "Booking Dashboard";
}

<h2 class="mb-4">Booking Dashboard</h2>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card text-bg-primary">
            <div class="card-body">
                <h5 class="card-title">Total Bookings</h5>
                <h3>@Model.TotalBookings</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-bg-success">
            <div class="card-body">
                <h5 class="card-title">Total Revenue</h5>
                <h3>@Model.TotalRevenue.ToString("N0")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-bg-warning">
            <div class="card-body">
                <h5 class="card-title">Last 30 Days</h5>
                <h3>@Model.BookingsLast30Days</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-bg-info">
            <div class="card-body">
                <h5 class="card-title">Avg Ticket Value</h5>
                <h3>@Model.AverageTicketValue.ToString("N0")</h3>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-8 mb-3">
        <div class="card">
            <div class="card-header">
                Bookings by Month
            </div>
            <div class="card-body">
                <canvas id="bookingsByMonthChart" height="130"></canvas>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-header">
                Top Routes
            </div>
            <div class="card-body">
                <canvas id="topRoutesChart" height="130"></canvas>
            </div>
        </div>
    </div>
</div>

<h4>Recent Bookings</h4>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>BookingID</th>
                <th>Record Locator</th>
                <th>Booked Date</th>
                <th>Origin</th>
                <th>Destination</th>
                <th>Total Amount</th>
                <th>Company</th>
                <th>Consultant</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model.RecentBookings)
            {
                <tr>
                    <td>@b.BookingID</td>
                    <td>@b.RecordLocator</td>
                    <td>@(b.BookedDate?.ToString("dd-MMM-yyyy HH:mm"))</td>
                    <td>@b.Origin</td>
                    <td>@b.Destination</td>
                    <td>@(b.TotalAmount?.ToString("N0"))</td>
                    @* <td>@b.CompanyName</td>
                    <td>@b.Consultant</td> *@
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

@section Scripts {
    <script>
        // Data from model for Bookings by Month
        const monthLabels = @Html.Raw(JsonSerializer.Serialize(Model.BookingsByMonth.Select(x => x.Label)));
        const monthValues = @Html.Raw(JsonSerializer.Serialize(Model.BookingsByMonth.Select(x => x.Value)));

        const ctxMonth = document.getElementById('bookingsByMonthChart').getContext('2d');
        const bookingsByMonthChart = new Chart(ctxMonth, {
            type: 'line',
            data: {
                labels: monthLabels,
                datasets: [{
                    label: 'Bookings',
                    data: monthValues
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false
            }
        });

        // Data from model for Top Routes
        const routeLabels = @Html.Raw(JsonSerializer.Serialize(Model.TopRoutes.Select(x => x.Label)));
        const routeValues = @Html.Raw(JsonSerializer.Serialize(Model.TopRoutes.Select(x => x.Value)));

        const ctxRoutes = document.getElementById('topRoutesChart').getContext('2d');
        const topRoutesChart = new Chart(ctxRoutes, {
            type: 'bar',
            data: {
                labels: routeLabels,
                datasets: [{
                    label: 'Bookings',
                    data: routeValues
                }]
            },
            options: {
                indexAxis: 'y',
                responsive: true,
                maintainAspectRatio: false
            }
        });
    </script>
}
