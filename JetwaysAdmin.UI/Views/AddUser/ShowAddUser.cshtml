@using JetwaysAdmin.UI.ViewModel
@model List<MenuHeaddata>

@{
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="pcoded-main-container">
    <div class="pcoded-wrapper">
        <!-- Page-header start -->
        <div class="page-header">
            <div class="page-block">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <div class="page-header-title d-flex">
                            <h5 class="m-b-10">Add New User</h5>
                            @if (TempData["UserAdd"] != null)
                            {
                                <div class="px-3 alert-success alert-success">
                                    @TempData["UserAdd"]
                                </div>
                            }
                        </div>
                    </div>
                    <div class="col-md-4">
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="#">
                                    User Management
                                </a>
                            </li>
                            <li class="breadcrumb-item">
                                Manage Users
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- Page-header end -->
        <div class="pcoded-inner-content">
            <!-- Main-body start -->
            <div class="main-body">
                <div class="page-wrapper">
                    <!-- Page-body start -->
                    <div class="page-body">
                        <div class="card">
                            <div class="card-block">
                                <form class="form-material form-row" asp-controller="AddUser" asp-action="AddUserDetail">
                                    <div class="form-group form-primary col-md-4">
                                        <select class="form-control langOpt" name="LegalEntityId">
                                            <option value="JET001">[JET001] Jetways Travels</option>
                                            <option value="JET002">[JET002] Jetways Travels2</option>
                                            <option value="JET003">[JET003] Jetways Travels3</option>
                                        </select>
                                        <span class="form-bar"></span>
                                        <label class="float-label">Select Legal Entity<span>*</span></label>
                                    </div>
                                    <div class="form-group form-primary col-md-1">
                                        <select name="Title" class="select">
                                            <option value="MR">Mr</option>
                                            <option value="MS">Ms</option>
                                            <option value="MRS">Mrs</option>
                                            <option value="MSTR">Mstr</option>
                                            <option value="MISS">Miss</option>
                                            <option value="DR">Dr (M)</option>
                                            @* <option value="">Dr (F)</option>
                                            <option value="">Prof (M)</option>
                                            <option value="">Prof (F)</option>
                                            <option value="">Capt (M)</option>
                                            <option value="">Capt (F)</option>
                                            <option value="">Hon (M)</option>
                                            <option value="">Hon (F)</option>
                                            <option value="">Gen (M)</option>
                                            <option value="">Gen (F)</option>
                                            <option value="">Sen (M)</option>
                                            <option value="">Sen (F)</option>
                                            <option value="">Col (M)</option>
                                            <option value="">Col (F)</option> *@
                                        </select>
                                        <span class="form-bar"></span>
                                        <label class="float-label">Title<span>*</span></label>
                                    </div>
                                    <div class="form-group form-primary col-md-2">
                                        <input type="text" name="FirstName" class="form-control" required>
                                        <span class="form-bar"></span>
                                        <label class="float-label">First Name<span>*</span></label>
                                    </div>
                                    <div class="form-group form-primary col-md-3">
                                        <input type="text" name="LastName" class="form-control" required>
                                        <span class="form-bar"></span>
                                        <label class="float-label">Last Name<span>*</span></label>
                                    </div>
                                    <div class="form-group form-primary col-md-4">
                                        <input type="text" name="BusinessEmail" class="form-control" required>
                                        <span class="form-bar"></span>
                                        <label class="float-label">Business Email ID<span>*</span></label>
                                    </div>
                                    <div class="form-group form-primary col-md-1">
                                        <select name="CountryCode" class="select">
                                            <option value="+91">IN(+91)</option>
                                            <option value="AF">AF (+93)</option>
                                            <option value="AL">AL (+355)</option>
                                            <option value="DZ">DZ (+213)</option>
                                            <option value="AO">AO (+244)</option>
                                            <option value="AR">AR (+54)</option>
                                            <option value="AM">AM (+374)</option>
                                            <option value="AW">AW (+297)</option>
                                            <option value="AU">AU (+61)</option>
                                            <option value="AZ">AZ (+994)</option>
                                        </select>
                                        <span class="form-bar"></span>
                                        <label class="float-label">Mobile Number</label>
                                    </div>
                                    <div class="form-group form-primary col-md-2">
                                        <input type="number" name="PhoneNumber" class="form-control">
                                        <span class="form-bar"></span>
                                        <label class="float-label"></label>
                                    </div>

                                    <div class="form-group form-primary col-md-3">
                                        <select name="Nationality" class="select">
                                            <option value="INDIA">INDIA</option>
                                         
                                        </select>
                                        <span class="form-bar"></span>
                                        <label class="float-label">Nationality<span>*</span></label>
                                    </div>

                                    <div class="form-group form-primary col-md-2">
                                        <select name="WorkLocation" class="select">
                                            <option value="">No data found</option>
                                             <option value="DEL">Delhi</option>
                                            <option value="PNQ">Pune</option>
                                              <option value="BOM">Mumbai</option>
                                              <option value="GURG">Gurgaon</option>
                                        </select>
                                        <span class="form-bar"></span>
                                        <label class="float-label">Work Location<span>*</span></label>
                                    </div>
                                    <div class="form-group form-primary col-md-4">
                                        <input type="text" name="EmailId" class="form-control">
                                        <span class="form-bar"></span>
                                        <label class="float-label">Email ID</label>
                                    </div>

                                    <div class="form-group form-primary col-md-3">
                                        <input type="text" name="SystemIntegrationRef" class="form-control">
                                        <span class="form-bar"></span>
                                        <label class="float-label">System Integration Ref. Nos. (Optional)</label>
                                    </div>

                                    <div class="form-group form-primary col-md-3 m-t-15">
                                        Approval Required for Booking?
                                        <label class="switch m-l-5" style="vertical-align: -webkit-baseline-middle;">
                                            <input type="checkbox" name="ApprovalRequiredForBooking">
                                            <span class="slider round"></span>
                                        </label>
                                    </div>
                                    <div class="form-group form-primary col-md-4 m-t-15">
                                        Approval Required for Deviation Booking?
                                        <label class="switch m-l-5" style="vertical-align: -webkit-baseline-middle;">
                                            <input type="checkbox" name="ApprovalRequiredForDeviation">
                                            <span class="slider round"></span>
                                        </label>
                                    </div>
                                    <div class="form-group form-primary col-md-8 m-t-15">
                                        <div class="form-check form-check-inline m-r-30">
                                            <input class="form-check-input" type="radio" name="GDSProfileType" value="true">
                                            <label class="form-check-label" for="">
                                                Create new GDS profile
                                            </label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="ExistingCustomer" value="true">
                                            <label class="form-check-label" for="">
                                                Update existing customer profile
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group form-primary col-md-12">
                                        <button class="btn btn-primary waves-effect waves-light">Add New</button>
                                        <button class="btn btn-danger waves-effect waves-light">Cancel</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Page-body end -->
        </div>
    </div>
</div>
