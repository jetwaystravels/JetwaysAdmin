                                                                <td onclick="location.href='@Url.Action("UpdateLocationTax", "LocationsandTax", new { LocationID = location.LocationID, IdLegal=ViewBag.Id,  LegalEntityCode=ViewBag.LegalEntityCode, LegalEntityName=ViewBag.LegalEntityName })'">
                                                                    @location.AddressLine1
                                                                </td>
                                                                <td onclick="location.href='@Url.Action("UpdateLocationTax", "LocationsandTax", new { LocationID = location.LocationID, IdLegal=ViewBag.Id,  LegalEntityCode=ViewBag.LegalEntityCode, LegalEntityName=ViewBag.LegalEntityName })'">
                                                                    @location.GSTNumber
                                                                </td>
                                                                <td onclick="location.href='@Url.Action("UpdateLocationTax", "LocationsandTax", new { LocationID = location.LocationID, IdLegal=ViewBag.Id,  LegalEntityCode=ViewBag.LegalEntityCode, LegalEntityName=ViewBag.LegalEntityName })'">
                                                                    @location.GSTName
