@model JetwaysAdmin.UI.ViewModel.MenuHeaddata
@{
    Layout = "~/Views/Shared/_LegalEntities.cshtml";
    var Data = Model;
}
<style>
    .alert {
        padding: 5px;
        background-color: #11c15b;
        color: white;
        width: 25%;
    }

    .closebtn {
        margin-left: 15px;
        color: white;
        font-weight: bold;
        float: right;
        font-size: 22px;
        line-height: 20px;
        cursor: pointer;
        transition: 0.3s;
    }

        .closebtn:hover {
            color: black;
        }

    .error-border {
