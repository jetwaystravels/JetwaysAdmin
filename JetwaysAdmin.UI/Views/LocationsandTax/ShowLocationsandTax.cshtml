                                    Showing 1 to 1
                                </span>
                                <div class="float-right pagination">
                                    <span class="m-t-5 m-r-5">Items per page:</span>
                                    <select class="form-select form-select-sm">
                                        <option>5</option>
                                        <option>10</option>
                                        <option selected>25</option>
                                        <option>100</option>
                                    </select>
                                    <ul class="pagination">
                                        <li class="page-item page-pre"><a class="page-link" aria-label="previous page" href="javascript:void(0)">‹</a></li>
                                        <li class="page-item active"><a class="page-link" aria-label="to page 1" href="javascript:void(0)">0</a></li>
                                        <li class="page-item page-next"><a class="page-link" aria-label="next page" href="javascript:void(0)">›</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="page-body" id="addLocation" style="display:none;">
                            <div class="card">
                                <div class="card-block">
                                    <form id="locationForm" class="form-material form-row" asp-controller="LocationsandTax" method="post">
                                        <input type="hidden" name="LegalEntityCode" class="form-control" value="@ViewBag.LegalEntityCode">
                                        <input type="hidden" name="LegalEntityName" class="form-control" value="@ViewBag.LegalEntityName">
                                        <input type="hidden" name="IdLegal" class="form-control" value="@ViewBag.Id">
                                        <div class="form-group form-primary col-md-5">
                                            <select name="LocationName" class="form-control fill" required>
                                                <option value="">Select State<span>*</span></option> 
                                                @foreach(var state in Model.Statedata) {
                                                    <option value="@state.StateName">@state.StateName</option>
                                                }
                                            </select>
                                            <span class="form-bar"></span>
                                            <label class="float-label">Select State<span>*</span></label>
                                        </div>
                                        <div class="form-group form-primary col-md-4">&nbsp;</div>

                                        <div class="form-group form-primary col-md-6">
                                            <input type="text" name="AddressLine1" class="form-control" required>
                                            <span class="form-bar"></span>
                                            <label class="float-label">Address Line 1<span>*</span></label>
                                        </div>
                                        <div class="form-group form-primary col-md-6">
                                            <input type="text" name="AddressLine2" class="form-control" required>
                                            <span class="form-bar"></span>
                                            <label class="float-label">Address Line 2</label>
                                        </div>
                                        <div class="form-group form-primary col-md-3">
                                           <select id="CountryId" name="Country" class="form-control fill" onchange="loadStates()" required>
                                            <option value="">-- Select Country --</option>
                                            @foreach (var country in countryData ?? new List<Country>())
                                            {
                                                <option value="@country.CountryID">@country.CountryName</option>
                                            }
                                        </select>
                                        <span class="form-bar"></span>
                                            <label class="float-label">Country<span>*</span></label>
                                        </div>
                                        <div class="form-group form-primary col-md-3">
                                           <select id="StateId" name="State" class="form-control fill" onchange="loadCities()" required>
                                        <option value="">-- Select State --</option>
                                          </select>
                                          <span class="form-bar"></span>
                                            <label class="float-label">State<span>*</span></label>
                                        </div>
                                        <div class="form-group form-primary col-md-3">
                                           <select id="CityId" name="City" class="form-control fill" required>
                                          <option value="">-- Select City --</option>
                                          </select>
                                          <span class="form-bar"></span>
                                          <label class="float-label">City<span>*</span></label>
                                        </div>
                                        <div class="form-group form-primary col-md-3">
                                            <input type="text" name="PostalCode" minlength="6" maxlength="6" pattern="\d{6}" required class="form-control">
                                            <span class="form-bar"></span>
                                            <label class="float-label">Postal Code<span>*</span></label>
                                        </div>
                                        <div class="form-group form-primary col-md-3">
                                            <input type="text" name="Latitude" class="form-control">
                                            <span class="form-bar"></span>
                                            <label class="float-label">Latitude</label>
                                        </div>
                                        <div class="form-group form-primary col-md-3">
                                            <input type="text" name="Longitude" class="form-control">
                                            <span class="form-bar"></span>
                                            <label class="float-label">Longitude</label>
                                        </div>
