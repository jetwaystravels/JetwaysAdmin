<main id="main" class="main">
    <div class="pcoded-main-container">
        <div class="pcoded-wrapper">
            <!-- Page-header start -->
            <div class="page-header">
                <div class="page-block">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <div class="page-header-title d-flex">
                                <h5 class="m-b-10">Users Details</h5>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">User Management</a></li>
                                <li class="breadcrumb-item">Users Details</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Page-header end -->

            <div class="pcoded-inner-content">
                <div class="main-body">
                    <div class="page-wrapper">
                        <div class="page-body">

                            @if (TempData["AddUSers"] != null)
                            {
                                <div class="alert alert-success" style="background:#11c15b;color: #fff;">
                                    <strong></strong> @TempData["AddUSers"]
                                    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                                </div>
                            } 
                            @if (TempData["DuplicateEmail"] != null)
                            {
                                <div class="alert alert-danger" style="background-color:red;">
                                    <strong></strong> @TempData["DuplicateEmail"]
                                    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                                </div>
                            } 
                            @if (TempData["DuplicateEmployeeID"] != null)
                            {
                                <div class="alert alert-danger" style="background-color:red;">
                                    <strong></strong>@TempData["DuplicateEmployeeID"]
