<!-- SINGLE Reset Password Modal (place OUTSIDE the foreach) -->
<div class="modal fade" id="resetPasswordModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reset Your Password</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="resetPasswordForm">
                    <input type="hidden" id="userId" />
                    <div class="form-group">
                        <label for="newPassword">New Password</label>
                        <input type="password" class="form-control" id="newPassword" />
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword">Confirm Password</label>
                        <input type="password" class="form-control" id="confirmPassword" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnDone">Done</button>
            </div>
        </div>
    </div>
</div>

<footer>
    <!-- jQuery (already included by you) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap JS (needed for modal open/close) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- SweetAlert2, flatpickr, select2 (as in your page) -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        $(function(){ $(".select").select2(); });
        $(function(){
            flatpickr(".date-main", { dateFormat: "Y-m-d", allowInput: true });
        });
    </script>

    <!-- Your existing tempdata alert logic -->
    <script>
        $(document).ready(function () {
          var duplicateMsg = '@TempData["DuplicateBillingEntity"]';
          if (duplicateMsg && duplicateMsg !== '') {
            Swal.fire({ icon: 'warning', title: 'Duplicate Entry', text: duplicateMsg, confirmButtonText: 'OK' });
          }
        });
    </script>

    <!-- Page behaviors -->
    <script>
        $(document).ready(function () {
          // toggle add form
          $('#addnewuser').on('click', function () {
            $('#addinternaluser').show();
            $('#manageinteruser').hide();
          });

          // row click to navigate (unchanged)
          $('td.clickable').on('click', function () {
            var $row = $(this).closest('tr');
            var userId = $row.data('userid');
            var legalEntityId = $row.data('legalentityid');
            var legalEntityName = $row.data('legalentityname');
            var legalEntityCode = $row.data('legalentitycode');
            var empId = $row.data('empid');

            window.location.href = '/Users/updateUser'
              + '?UserID=' + encodeURIComponent(userId)
              + '&legalEntityId=' + encodeURIComponent(legalEntityId)
              + '&legalEntityName=' + encodeURIComponent(legalEntityName)
              + '&legalEntityCode=' + encodeURIComponent(legalEntityCode)
              + '&empId=' + encodeURIComponent(empId);
          });
        });
    </script>

    <!-- Legal Entity change & Work Location AJAX -->
    <script>
        document.getElementById('ddlLegalEntity')?.addEventListener('change', function () {
          var sel = this.options[this.selectedIndex];
          var legalEntityCode = sel?.value?.trim() || '';
          var legalEntityName = sel?.text || '';
          document.getElementById('txtLegalEntityCode').value = legalEntityCode;
          document.getElementById('txtLegalEntityName').value = legalEntityName;
          if (!legalEntityCode) return;

          $.ajax({
            url: '/Users/GetWorkLocations',
            type: 'GET',
            data: { legalEntityCode: legalEntityCode },
            success: function (data) {
              document.getElementById('stateNameInput').value = data.stateName || '';
              document.getElementById('stateIdInput').value = data.stateId || '';
            },
            error: function () { alert("Failed to load work locations."); }
          });
        });
    </script>

    <!-- ✅ Reset Password logic -->
    <script>
        // Fill userId each time the modal opens
        $('#resetPasswordModal').on('show.bs.modal', function (ev) {
          const $trigger = $(ev.relatedTarget);           // the <a> that opened the modal
          const userId = $trigger.closest('tr').data('userid');
          $('#userId').val(userId);
          alert(userId);
          $('#resetPasswordForm')[0].reset();             // clear old values
        });

        // Validate + call API
        $('#btnDone').on('click', function () {
          const userId = $('#userId').val();
          const newPass = $('#newPassword').val();
          const confirmPass = $('#confirmPassword').val();

          if (!newPass || !confirmPass) { alert('Please fill in both fields.'); return; }
          if (newPass !== confirmPass) { alert('Passwords do not match!'); return; }

          $.ajax({
            url: '/api/users/resetpassword',  // change to your real endpoint
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({ userId: userId, newPassword: newPass }),
            success: function () {
              alert('Password updated successfully!');
              $('#resetPasswordModal').modal('hide');
            },
            error: function (xhr) {
              alert(xhr.responseText || 'Error updating password.');
            }
          });
        });
    </script>

</footer>
