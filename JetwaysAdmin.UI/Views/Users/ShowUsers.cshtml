                                                            <select class="form-control langOpt" name="fareType1" multiple data-placeholder="Cost Center">
                                                            </select>
                                                        </div>

                                                        <div class="form-group form-primary col-md-6">
                                                            <select class="form-control langOpt" name="fareType1" multiple data-placeholder="Band">
                                                            </select>
                                                        </div>
                                                        <div class="form-group form-primary col-md-6">
                                                            <select name="fareType1"
