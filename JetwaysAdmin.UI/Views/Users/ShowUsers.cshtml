                                            </select>
                                            <span class="form-bar"></span>
                                            <label class="float-label">Profile Type</label>
                                        </div>
                                        <div class="form-group form-primary col-md-3">
                                            <input type="text" name="SystemIntegrationRefNo" class="form-control">
                                            <span class="form-bar"></span>
                                            <label class="float-label">System Integration Ref. Nos. (Optional)</label>
                                        </div>

                                        <div class="form-group form-primary col-md-4 m-t-15">
                                            Approval Required for Booking?
                                            <label class="switch m-l-5" style="vertical-align: -webkit-baseline-middle;">
                                                <input type="checkbox" name="ApprovalRequiredBooking" value="true">
                                                <span class="slider round"></span>
                                            </label>
                                        </div>
                                        <div class="form-group form-primary col-md-4 m-t-15">
                                            Approval Required for Deviation Booking?
                                            <label class="switch m-l-5" style="vertical-align: -webkit-baseline-middle;">
                                                <input type="checkbox" name="ApprovalDeviationBooking" value="true">
                                                <span class="slider round"></span>
                                            </label>
                                        </div>
                                        <div class="form-group form-primary col-md-12">
                                            <input type="file" name="Logo" class="form-control">
                                            <span class="form-bar"></span>
                                            <span style="font-size:11px;font-weight:700;">Upload logo allowed formats: .JPG / .PNG, Maximum file size: 1mb, Resolution 200px x 90px</span>
                                        </div>
                                        <div class="form-group form-primary col-md-12">
                                            <button class="btn btn-primary waves-effect waves-light" onclick="validateForm()" type="submit">Add New</button>
                                            <button type="reset" class="btn btn-danger waves-effect waves-light">Cancel</button>
                                        </div>
                                    </form>

                                    <div id="manageinteruser">
                                        <div class="d-flex justify-content-between m-b-10">
                                            <form class="form-material">
                                                <div class="form-group form-primary data-search" style="width: 620px; margin-bottom: 0;">
                                                    <input id="search-input" type="text" class="form-control">
                                                    <span class="form-bar"></span>
                                                    <label class="float-label"><i class="fa fa-search m-r-10"></i>Search</label>
                                                    <i class="fa fa-caret-down arrow toggle-arrow" aria-hidden="true" style="cursor:pointer;"></i>
                                                </div>

                                                <!-- your filter area ... -->
                                                <div class="hidden-div">
                                                    <div class="form-material form-row">
                                                        <div class="form-group form-primary col-md-12">
                                                            <select class="form-control langOpt" name="Legal Entity" multiple data-placeholder="Legal Entity">
                                                                <option value="2">[JET001] Jetways Travels</option>
                                                            </select>
                                                        </div>
                                                        <div class="form-group form-primary col-md-6">
                                                            <input class="form-control date-main" type="text" placeholder="From Date">
                                                            <span class="form-bar"></span>
                                                        </div>
                                                        <div class="form-group form-primary col-md-6">
                                                            <input class="form-control date-main" type="text" placeholder="To Date">
                                                            <span class="form-bar"></span>
                                                        </div>
