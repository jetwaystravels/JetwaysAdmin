<!-- Select Users start -->
<script>
    function toggleDropdown(event) {
        event.stopPropagation();
        let dropdown = event.currentTarget.closest('.dropdown').querySelector('.dropdown-list');

        // Close all other dropdowns
        document.querySelectorAll('.dropdown-list').forEach(list => {
            if (list !== dropdown) list.classList.remove('active');
        });

        // Toggle the clicked dropdown
        dropdown.classList.toggle('active');
    }

    function selectItem(event) {
        let item = event.target.innerText; // Get the text of the clicked item
        let dropdown = event.target.closest('.dropdown');
        let selectedContainer = dropdown.querySelector('.selected-items');

        // Check if item is already selected
        let existingItem = selectedContainer.querySelector(`[data-value="${item}"]`);
        if (!existingItem) {
            addSelectedItem(selectedContainer, item);
        }
    }

    function addSelectedItem(container, item) {
        let itemElem = document.createElement('div');
        itemElem.classList.add('selected-item');
        itemElem.dataset.value = item;
        itemElem.innerHTML = `${item} <span onclick="removeItem(this, '${item}')">X</span>`;
        container.appendChild(itemElem);
    }

    function removeItem(span, item) {
        let dropdown = span.closest('.dropdown');
        let selectedContainer = dropdown.querySelector('.selected-items');

        // Remove the item from selected container
        let items = selectedContainer.querySelectorAll('.selected-item');
        items.forEach(selectedItem => {
            if (selectedItem.dataset.value === item) {
                selectedItem.remove();
            }
        });
    }

    // Close dropdown if clicked outside
    document.addEventListener('click', function (event) {
        document.querySelectorAll('.dropdown-list').forEach(list => {
            if (!list.closest('.dropdown').contains(event.target)) {
                list.classList.remove('active');
            }
        });
    });
</script>
<!-- Select Users End -->