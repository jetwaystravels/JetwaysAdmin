@model JetwaysAdmin.Entity.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
    // Prefer TempData (survives redirect). Fallback to ViewBag if you return View().
    var msg = (TempData["Toast.Message"] ?? ViewBag.Message ?? "Your password has been changed successfully.")
              ?.ToString();
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-sm-10 col-md-8 col-lg-5">
            <div class="card shadow-sm border-0 text-center">
                <div class="card-body p-5">
                    <div class="display-3 text-success" aria-hidden="true">&#10006;</div>
                    <h4 class="mt-3 mb-2">@msg</h4>
                   
                    <a asp-controller="Login" asp-action="UserLogin" class="btn btn-primary btn-block">
                        Go to Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
