@model JetwaysAdmin.UI.ViewModel.MenuHeaddata
@{
    Layout = "~/Views/Shared/_Supplier.cshtml";
    var Data = Model;
}

<main id="main" class="main">
    <div class="pcoded-main-container">
        <!--Add Credential start-->
        <div class="pcoded-wrapper addCredential" style="display:none;">
            <!-- Page-header start -->
            <div class="page-header">
                <div class="page-block">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <div class="page-header-title">
                                <h5 class="m-b-10"><a href="deal-code.html" style="position: relative; z-index: 10;"><i class="fa fa-arrow-left mr-2" aria-hidden="true" style="vertical-align: text-top;"></i></a>Add Deal Code</h5>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="#">Setting</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#">Manage Suppliers</a>
                                </li>
                                <li class="breadcrumb-item">
                                    Promotional Code
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Page-header end -->
            <div class="pcoded-inner-content">
                <!-- Main-body start -->
                <div class="main-body">
                    <div class="page-wrapper">
                        <!-- Page-body start -->
                        <div class="page-body">
                         
                            <!-- Main-body start -->
                            <div class="main-body">
                                <div class="page-wrapper">
                                    <!-- Page-body start -->
                                    <div class="page-body">
                                        <div class="card">
                                            <div class="card-block">
                                                <!--  credential form Start -->
                                                <form class="form-material form-row" method="post">
                                                    <input type="hidden" name="SupplierId" class="form-control" value="@ViewBag.SupplierId">
                                                    <div class="form-group form-primary col-md-3">
                                                        <input type="text" name="PCC" class="form-control">
                                                        <span class="form-bar"></span>
                                                        <label class="float-label">PCC</label>
                                                    </div>
                                                    <div class="form-group form-primary col-md-3">
                                                        <input type="text" name="DealCodeName" class="form-control">
                                                        <span class="form-bar"></span>
                                                        <label class="float-label">Deal Code Name</label>
                                                    </div>
                                                    <div class="form-group form-primary col-md-3">
                                                        <select name="SelectedCredentialId" class="form-control fill">
                                                            @foreach (var IATA in Model.IATAGruopName)
                                                            {
                                                             <option value="@IATA.GroupID">@IATA.GroupName</option>
                                                            })
                                                        </select>
                                                        <span class="form-bar"></span>
                                                        <label class="float-label">IATA Group*</label>
                                                    </div>
                                                    <div class="form-group form-primary col-md-3">
                                                        <select name="TravelMode" class="form-control fill">
                                                            <option value="opt1">Travel Mode*</option>
                                                            <option value="opt2">Domestic</option>
                                                            <option value="opt3"> International</option>
                                                            <option value="opt4">Both</option>
                                                        </select>
                                                        <span class="form-bar"></span>
                                                    </div>

                                                    <div class="form-group form-primary col-md-3">
                                                        <select class="form-control" name="CabinClass" multiple id="langOpt">
                                                            <option value="2">Economy</option>
                                                            <option value="3">Business</option>
                                                            <option value="4">First</option>
                                                            <option value="5">Primium Economy</option>
                                                        </select>
                                                    </div>
                                                    <div class="form-group form-primary col-md-3">
                                                        <input type="text" name="DealPricingCode" class="form-control">
                                                        <span class="form-bar"></span>
                                                        <label class="float-label">Deal/Pricing Code</label>
                                                    </div>
                                                    <div class="form-group form-primary col-md-3">
                                                        <input type="text" name="TourCode" class="form-control">
                                                        <span class="form-bar"></span>
                                                        <label class="float-label">Tour Code</label>
                                                    </div>
                                                    <div class="form-group form-primary col-md-3">
                                                        <select name="AssociatedFareTypes" class="form-control fill">
                                                            <option value="opt1">Associated Fare Type(s)*</option>
                                                            <option value="Corporate">Corporate</option>
                                                            <option value="Retail">Retail</option>
                                                        </select>
                                                        <span class="form-bar"></span>
                                                    </div>

                                                    <div class="form-group form-primary col-md-3">
                                                        <select name="DefaultValue" class="form-control fill">
                                                            <option value="opt1">Default</option>
                                                            <option value="opt2">Pormotional</option>
                                                        </select>
                                                        <span class="form-bar"></span>
                                                    </div>
                                                    <div class="form-group form-primary col-md-3">
                                                        <input class="form-control" name="ExpiryDate" type="text" id="datepicker" autocomplete="off" placeholder="Expiry Date">
                                                        <span class="form-bar"></span>
                                                    </div>
                                                    <div class="form-group form-primary col-md-3">
                                                        <input type="text" name="ClassOfSeats" class="form-control">
                                                        <span class="form-bar"></span>
                                                        <label class="float-label">Class of Seats(RBDs)</label>
                                                    </div>
                                                    <div class="form-group form-primary col-md-3 m-t-15">
                                                        <strong>Auto enable this deal code to legal entity</strong>
                                                        <label class="switch m-l-5">
                                                            <input type="checkbox" name="AutoEnableDealCode" value="true">
                                                            <span class="slider round"></span>
                                                        </label>
                                                    </div>

                                                    <div class="form-group form-primary col-md-3 m-t-15">
                                                        <span style="display:block">GST Mandatory</span>
                                                        <label class="switch">
                                                            <input type="checkbox" name="GSTMandatory" value="true">
                                                            <span class="slider round"></span>
                                                        </label>
                                                    </div>
                                                    <div class="form-group form-primary col-md-3 m-t-15">
                                                        <span style="display:block">Override Customer GST?</span>
                                                        <label class="switch">
                                                            <input type="checkbox" name="OverrideCustomerGST" value="true">
                                                            <span class="slider round"></span>
                                                        </label>
                                                    </div>

                                                   @*  <div class="form-group form-primary col-md-3">
                                                        <input type="text" name="SupplierCode" class="form-control">
                                                        <span class="form-bar"></span>
                                                        <label class="float-label">Supplier Code(optional)</label>
                                                    </div> *@
                                                    <div class="form-group form-primary col-md-3">
                                                        <select name="BookingType" class="form-control fill">
                                                            <option>Booking Type</option>
                                                            <option value="opt1">Business</option>
                                                            <option value="opt2">Personal</option>
                                                        </select>
                                                        <span class="form-bar"></span>
                                                    </div>

                                                    <div class="form-group form-primary col-md-7 m-l-5">
                                                        <button type="submit" formaction="/AddNewSupplier/AddDealCodes" class="btn btn-primary waves-effect waves-light">Add</button>
                                                        <button class="btn btn-danger waves-effect waves-light">Cancel</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                        <!--  credentials form end -->
                                    </div>
                                </div>
                            </div>
                            <!-- Page-body end -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--End Add Credential-->
        <div class="pcoded-wrapper CredInform">
            <!-- Page-header start -->
            <div class="page-header">
                <div class="page-block">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <div class="page-header-title">
                                <h5 class="m-b-10">Deal Codes</h5>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="#">Setting</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#">Manage Suppliers</a>
                                </li>
                                <li class="breadcrumb-item">
                                    Deal Codes
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Page-header end -->
            <div class="pcoded-inner-content">
                <!-- Main-body start -->
                <div class="main-body">
                    @if (TempData["Add_DealCode"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["Add_DealCode"]
                            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                        </div>
                    }
                    <div class="page-wrapper">
                        <!-- Page-body start -->
                           <div class="d-flex justify-content-between m-b-10">
                                            <form class="form-material">
                                                <div class="form-group form-primary" style="width:280px;">
                                                    <input type="text" name="footer-email" class="form-control">
                                                    <span class="form-bar"></span>
                                                    <label class="float-label"><i class="fa fa-search m-r-10"></i>Search</label>
                                                </div>
                                            </form>
                            <div><button type="button" class="btn sml-btn-danger waves-effect waves-light" id="addcredID">+ Add New</button></div>
                                        </div>
                                        <div class="card">
                                            <div class="card-block table-border-style">
                                                <!--  credentials Start -->
                                                <div class="table-responsive">
                                                    <table class="table table-hover">
                                                        <thead>
                                                            <tr>
                                                                <th><button class="srt-btn" type="button" aria-label="Deal Code Name">Deal Code Name</button></th>
                                                                <th><button class="srt-btn" type="button" aria-label="Deal Code Type">Deal Code Type</button></th>
                                                                <th><button class="srt-btn" type="button" aria-label="Booking Type">Booking Type</button></th>
                                                                <th><button class="srt-btn" type="button" aria-label="Travel Mode">Travel Mode</button></th>
                                                                <th><button class="srt-btn" type="button" aria-label="Deal Code">Deal Code</button></th>
                                                                <th><button class="srt-btn" type="button" aria-label="Start Date">Start Date</button></th>
                                                                <th><button class="srt-btn" type="button" aria-label="End Date">End Date</button></th>
                                                                <th><button class="srt-btn" type="button" aria-label="Status">Status</button></th>
                                                            </tr>
                                                        </thead>
                                        @foreach (var dealCode in Model.DealCodeView)
                                        {
                                            <tbody>
                                                <tr onclick="location.href='@Url.Action("UpdateDealCode", "AddNewSupplier", new { id = dealCode.DealCodeId })';" style="cursor:pointer;">
                                                    <td>@dealCode.DealCodeName</td>
                                                    <td>@dealCode.DefaultValue</td>
                                                    <td>@dealCode.BookingType </td>
                                                    <td>@dealCode.TravelMode</td>
                                                    <td>@dealCode.DealPricingCode </td>
                                                    <td>@dealCode.StartDate.ToString("dd-MM-yyyy")</td>
                                                    <td>@dealCode.ExpiryDate?.ToString("dd-MM-yyyy")</td>
                                                    <td>
                                                        <label class="switch">
                                                            <input type="checkbox">
                                                            <span class="slider round"></span>
                                                        </label>
                                                    </td>
                                                </tr>                                                            
                                            </tbody>
                                        }
                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="d-flex justify-content-between pagination-section">
                                            <span class="pagination-info">
                                                Showing 1 to 1
                                            </span>
                                            <div class="float-right pagination">
                                                <span class="m-t-5 m-r-5">Items per page:</span>
                                                <select class="form-select form-select-sm">
                                                    <option selected>1</option>                                                    
                                                </select>
                                                <ul class="pagination">
                                                    <li class="page-item page-pre"><a class="page-link" aria-label="previous page" href="javascript:void(0)">‹</a></li>
                                                    <li class="page-item active"><a class="page-link" aria-label="to page 1" href="javascript:void(0)">1</a></li>
                                                    <li class="page-item"><a class="page-link" aria-label="to page 2" href="javascript:void(0)">2</a></li>
                                                    <li class="page-item"><a class="page-link" aria-label="to page 3" href="javascript:void(0)">3</a></li>
                                                    <li class="page-item"><a class="page-link" aria-label="to page 4" href="javascript:void(0)">4</a></li>
                                                    <li class="page-item"><a class="page-link" aria-label="to page 5" href="javascript:void(0)">5</a></li>
                                                    <li class="page-item page-last-separator disabled"><a class="page-link" aria-label="" href="javascript:void(0)">...</a></li>
                                                    <li class="page-item"><a class="page-link" aria-label="to page 80" href="javascript:void(0)">80</a></li>
                                                    <li class="page-item page-next"><a class="page-link" aria-label="next page" href="javascript:void(0)">›</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                        <!--  credentials end -->
                                    </div>
                               </div>
                          </div>
                    </div>
     </div>
          </main>

<footer>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script typeof="text/javascript">
        $(document).ready(function () {
            $("#addcredID").click(function () {
                $(".addCredential").show();
                $(".CredInform").hide();
            });
        });
    </script>
    <!-- multiple selection Jquery start -->
    <script>
        $('#langOpt').multiselect({
            columns: 1,
            texts: {
                placeholder: 'Cabin Class *'
            }
        });
        // $('#cb').multiselect({
        //     columns: 1,
        //     texts: {
        //         placeholder: 'Cabin Class *'
        //     }
        // });
    </script>
    <!-- multiple selection Jquery start -->
    <script>
        $(function () {
            $("#datepicker").datepicker({
                changeMonth: true,
                changeYear: true
            });
        });
    </script>
</footer>