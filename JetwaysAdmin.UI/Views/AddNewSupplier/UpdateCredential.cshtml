@model JetwaysAdmin.Entity.SuppliersCredential
@{
    Layout = "~/Views/Shared/_Supplier.cshtml";
    var Data = Model;
}

<main id="main" class="main">
    <div class="pcoded-main-container">
        <div class="pcoded-wrapper">
            <!-- Page-header start -->
            <div class="page-header">
                <div class="page-block">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <div class="page-header-title">
                                <h5 class="m-b-10"><a href="credentials.html" style="position: relative; z-index: 10;"><i class="fa fa-arrow-left mr-2" aria-hidden="true" style="vertical-align: text-top;"></i></a>Update Credential</h5>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="#">Setting</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#">Manage Suppliers</a>
                                </li>
                                <li class="breadcrumb-item">
                                    Credentials
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Page-header end -->
            <div class="pcoded-inner-content">
                <!-- Main-body start -->
                <div class="main-body">
                    <div class="page-wrapper">
                        <!-- Page-body start -->
                        <div class="page-body">
                            @if (TempData["Update_Credentials"] != null)
                            {
                                <div class="alert alert-success">
                                    @TempData["Update_Credentials"]
                                    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                                </div>
                            }
                            <div class="card">
                                <div class="card-block">
                                    <!--  credential form Start -->
                                    <form class="form-material form-row" method="post">
                                        <input type="hidden" name="Id" value="@Model.Id" class="form-control">
                                        <div class="form-group form-primary col-md-3">
                                            <input type="text" name="CredentialsName" value="@Model.CredentialsName" class="form-control">
                                            <span class="form-bar"></span>
                                            <label class="float-label">Credentials Name</label>
                                        </div>
                                        <div class="form-group form-primary col-md-3">
                                            <input type="text" name="ClientId" value="@Model.ClientId" class="form-control" required>
                                            <span class="form-bar"></span>
                                            <label class="float-label">Client Id<span>*</span></label>
                                        </div>
                                        <div class="form-group form-primary col-md-3">
                                            <input type="text" name="UserName" value="@Model.UserName" class="form-control" required>
                                            <span class="form-bar"></span>
                                            <label class="float-label">User Name<span>*</span></label>
                                        </div>
                                        <div class="form-group form-primary col-md-3">
                                            <input type="Password" value="@Model.Password" name="Password" class="form-control" required>
                                            <span class="form-bar"></span>
                                            <label class="float-label">Password<span>*</span></label>
                                        </div>
                                        <div class="form-group form-primary col-md-3">
                                            <select class="form-control" name="AssociatedFareTypes"  multiple id="langOpt">
                                                <option value="Corporate">Corporate</option>
                                                <option value="Retail">Retail</option>
                                            
                                            </select>
                                        </div>
                                        <div class="form-group form-primary col-md-3">
                                            <select name="TravelType" class="form-control fill">
                                                <option value="opt1">Travel Type*</option>
                                                <option value="International"> International </option>
                                                <option value="Domestic"> Domestic </option>
                                                <option value="Both">Both</option>
                                            </select>
                                            <span class="form-bar"></span>
                                        </div>
                                        <div class="form-group form-primary col-md-3">
                                            <input type="text" name="AgentName" value="@Model.AgentName" class="form-control">
                                            <span class="form-bar"></span>
                                            <label class="float-label">Agent Name</label>
                                        </div>
                                        <div class="form-group form-primary col-md-3">
                                            <input type="text" name="OrganizationId"  value="@Model.OrganizationId" class="form-control">
                                            <span class="form-bar"></span>
                                            <label class="float-label">Organization ID</label>
                                        </div>
                                        <div class="form-group form-primary col-md-3">
                                            <select name="CredentialsType" class="form-control fill">
                                                <option value="opt1">Credentials Typ*</option>
                                                <option value="opt2">Default</option>
                                                <option value="opt3">Custom</option>
                                            </select>
                                            <span class="form-bar"></span>
                                        </div>
                                        <div class="form-group form-primary col-md-3">
                                            <input type="text" name="SupplierId" value="@Model.SupplierId" class="form-control">
                                            <span class="form-bar"></span>
                                            <label class="float-label">Supplier Code(optional)</label>
                                        </div>
                                        <div class="form-group form-primary col-md-7 m-l-5">
                                            <button type="submit"  formaction="/AddNewSupplier/EditInternalUsers" class="btn btn-primary waves-effect waves-light">Update</button>
                                            <button type="button" class="btn btn-danger waves-effect waves-light disabled">Cancel</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <!--  credentials form end -->
                        </div>
                    </div>
               </div>
            </div>
        </div>
    </div>
</main>
