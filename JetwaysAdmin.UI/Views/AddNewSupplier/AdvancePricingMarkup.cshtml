@model JetwaysAdmin.Entity.AddSupplier
@{
    Layout = "~/Views/Shared/_Supplier.cshtml";
    var Data = Model;
}

<main id="main" class="main">
    <div class="pcoded-main-container" id="Nemit1" style="display:none">
        <div class="pcoded-wrapper">
            <!-- Page-header start -->
            <div class="page-header">
                <div class="page-block">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <div class="page-header-title">
                                <h5 class="m-b-10"><a href="advance-pricing.html" style="position: relative; z-index: 10;"><i class="fa fa-arrow-left mr-2" aria-hidden="true" style="vertical-align: text-top;"></i></a>Add Advance Pricing</h5>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="#">Setting</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#">Manage Suppliers</a>
                                </li>
                                <li class="breadcrumb-item">
                                    Advance Pricing
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Page-header end -->
            <div class="pcoded-inner-content">
                <!-- Main-body start -->
                <div class="main-body">
                    <div class="page-wrapper">
                        <!-- Page-body start -->
                        <div class="page-body">
                            <div class="card">
                                <div class="card-block">
                                    <!--  credential form Start -->
                                    <form class="form-material form-row">
                                        <div class="form-group form-primary col-md-3">
                                            <input type="text" name="credentials-name" class="form-control">
                                            <span class="form-bar"></span>
                                            <label class="float-label">Airline<span>*</span></label>
                                        </div>
                                        <div class="form-group form-primary col-md-3">
                                            <select name="select" class="form-control fill">
                                                <option value="opt1">Travel Type*</option>
                                                <option value="opt2"> International </option>
                                                <option value="opt3"> Domestic </option>
                                                <option value="opt4">Both</option>
                                            </select>
                                            <span class="form-bar"></span>
                                        </div>
                                        <div class="form-group form-primary col-md-3">
                                            <select class="form-control" name="Cabin Class" multiple id="cb">
                                                <option value="2">Economy</option>
                                                <option value="3">Business</option>
                                                <option value="4">First</option>
                                                <option value="5">Primium Economy</option>
                                            </select>
                                        </div>
                                        <div class="form-group form-primary col-md-3">
                                            <input type="text" name="user-name" class="form-control" required>
                                            <span class="form-bar"></span>
                                            <label class="float-label">User Name<span>*</span></label>
                                        </div>
                                        <div class="form-group form-primary col-md-3">
                                            <select class="form-control" name="Associated Fare" multiple id="langOpt">
                                                <option value="2">Corporate</option>
                                                <option value="3">Promo fare</option>
                                                <option value="4">Published</option>
                                                <option value="5">Flexi Plus </option>
                                                <option value="6">SME </option>
                                                <option value="7">Family Fare </option>
                                                <option value="8">Special Return  </option>
                                                <option value="9">Special Promo Fare </option>
                                                <option value="10">Coupon Fare </option>
                                                <option value="10">Super 6E </option>
                                                <option value="10">Sale Fare </option>
                                                <option value="10">6E Lite </option>
                                                <option value="10">Tactical </option>
                                                <option value="10">Stretch </option>
                                                <option value="10"> Stretch Plus </option>
                                                <option value="10"> MarineFare </option>
                                            </select>
                                        </div>
                                        <div class="form-group form-primary col-md-3">
                                            <select name="select" class="form-control fill">
                                                <option value="opt1">Change Type*</option>
                                                <option value="opt2"> Fixed Amount</option>
                                                <option value="opt3">Percentage</option>
                                            </select>
                                            <span class="form-bar"></span>
                                        </div>
                                        <div class="form-group form-primary col-md-3">
                                            <select name="select" class="form-control fill">
                                                <option value="opt1">Advance Pricing On*</option>
                                                <option value="opt2"> % Base Fare</option>
                                                <option value="opt3">% Gross Fare</option>
                                            </select>
                                            <span class="form-bar"></span>
                                        </div>

                                        <div class="form-group form-primary col-md-3">
                                            <label style="margin-top:-24px; font-size:13px;" class="float-label m-l-3">Amount / Percentage</label>
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <input type="text" name="Agent-name" class="form-control" placeholder="INR" style="margin-left: 5px;">
                                                    <span class="form-bar"></span>
                                                </div>
                                                <div class="col-md-9">
                                                    <input type="text" name="Agent-name" class="form-control" placeholder="%">
                                                    <span class="form-bar"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group form-primary col-md-7 m-l-5 m-t-10">
                                            <button class="btn btn-primary waves-effect waves-light disabled">Add</button>
                                            <button class="btn btn-danger waves-effect waves-light">Cancel</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <!--  credentials form end -->
                        </div>
                    </div>
                </div>
                <!-- Page-body end -->
            </div>
        </div>
    </div>
    <!----Detail Start--->
    <div class="pcoded-main-container" id="Nemit2">
        <div class="pcoded-wrapper">
            <!-- Page-header start -->
            <div class="page-header">
                <div class="page-block">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <div class="page-header-title">
                                <h5 class="m-b-10">Advance Pricing Markup</h5>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="#">Setting</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#">Manage Suppliers</a>
                                </li>
                                <li class="breadcrumb-item">
                                    Advance Pricing Markup
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Page-header end -->
            <div class="pcoded-inner-content">
                <!-- Main-body start -->
                <div class="main-body">
                    <div class="page-wrapper">
                        <div class="page-body">
                            <div class="d-flex justify-content-between m-b-10">
                                <form class="form-material">
                                    <div class="form-group form-primary" style="width:280px;">
                                        <input type="text" name="footer-email" class="form-control">
                                        <span class="form-bar"></span>
                                        <label class="float-label"><i class="fa fa-search m-r-10"></i>Search</label>
                                    </div>
                                </form>
                                <div><button class="btn sml-btn-danger waves-effect waves-light addNetRemit">+ Add New</button></div>
                            </div>
                            <div class="card">
                                <div class="card-block table-border-style">
                                    <!--  Net remit codes Start -->
                                    <div class="table-border-style">
                                        <div class="table-responsive">
                                            <table class="table table-hover">
                                                <thead>
                                                    <tr>
                                                        <th><button class="srt-btn" type="button" aria-label="supplier">Supplier</button></th>
                                                        <th><button class="srt-btn" type="button" aria-label="airline">Airline</button></th>
                                                        <th><button class="srt-btn" type="button" aria-label="travel-type">Travel Type</button></th>
                                                        <th><button class="srt-btn" type="button" aria-label="cabin-class">Cabin Class</button></th>
                                                        <th><button class="srt-btn" type="button" aria-label="fare-type">Fare Type</button></th>
                                                        <th><button class="srt-btn" type="button" aria-label="change-type">Change Type</button></th>
                                                        <th><button class="srt-btn" type="button" aria-label="amount/percentage">Amount/Percentage</button></th>
                                                        <th><button class="srt-btn" type="button" aria-label="Status">Status</button></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td class="text-center" colspan="8">No Data Found</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--  Net remit codes end -->
                        </div>
                    </div>
                </div>
                <!-- Page-body end -->
            </div>
        </div>
    </div>
</main>
<footer>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        //New JS.
        $(document).ready(function () {
            $('.addNetRemit').on('click', function () {
                $('#Nemit1').show();
                $('#Nemit2').hide();
            });
        });

        $('#langOpt').multiselect({
            columns: 1,
            texts: {
                placeholder: 'Associated Fare Type(s) *'
            }
        });

        $('#cb').multiselect({
            columns: 1,
            texts: {
                placeholder: 'Cabin Class *'
            }
        });
    </script>
    
</footer>