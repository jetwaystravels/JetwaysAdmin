                                                        <th><button class="srt-btn" type="button" aria-label="travelmode">Travel Mode</button></th>
                                                        <th><button class="srt-btn" type="button" aria-label="net remit code">Net Remit Code</button></th>
                                                        <th><button class="srt-btn" type="button" aria-label="Status">Status</button></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td class="text-center" colspan="7">No Data Found</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--  Net remit codes end -->
                        </div>
                    </div>
                </div>
                <!-- Page-body end -->
            </div>
        </div>
    </div>
</main>
<footer>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // New JS.
        $(document).ready(function () {
            $('.addNetRemit').on('click', function () {
                $('#Nemit1').show();
                $('#Nemit2').hide();
            });
        });

        $('#langOpt').multiselect({
            columns: 1,
            texts: {
                placeholder: 'Associated Fare Type(s) *'
            }
        });
        $('#cb').multiselect({
            columns: 1,
            texts: {
                placeholder: 'Cabin Class *'
            }
        });
  
        $(function () {
            $(".date-main").datepicker({
                changeMonth: true,
                changeYear: true
            });
        });
   
        $(".add").click(function () {
            $(this).closest('.content').append('<tr class="row-bdr-btm flightdtl"><td class="first"><span><input type="text" class="form-control"></span><span style="margin-right:0;"><input type="text" class="form-control"></span></td><td><input type="text" class="form-control"></td><td><input type="text" class="form-control"></td><td><input type="text" class="form-control"></td><td><span class="remove btn waves-effect waves-light btn-danger btn-outline-danger"><i class="fa fa-minus-circle" aria-hidden="true"></i></span></td></tr>');
        });
  
        $(".add").click(function () {
            $(this).closest('.content-one').append(' <div class="row p-l-p flightdtl"><div class="col-md-5"><input class="form-control date-main" type="text" placeholder="Start Date"> <span class="form-bar"></span></div><div class="col-md-5"><input class="form-control date-main" type="text" placeholder="End Date"><span class="form-bar"></span></div><div class="col-md-1 text-center"><span class="remove"><i class="add fa fa-minus-circle m-t-15" aria-hidden="true" style="color: #ff1515; cursor:pointer"></i></span></div></div>');
        });
   
        $(".add").click(function () {
            $(this).closest('.content-two').append(' <div class="row p-l-p flightdtl"><div class="col-md-10"><input class="form-control date-main" type="text" placeholder="Select Date"><span class="form-bar"></span></div><div class="col-md-1 text-center"><span class="remove"><i class="add fa fa-minus-circle m-t-15" aria-hidden="true" style="color: #ff1515; cursor:pointer"></i></span></div></div>');
        });
    
        $("body").on('click', '.remove', function () {
            $(this).parents('.flightdtl').remove();
        });

      
    </script>
   

</footer>