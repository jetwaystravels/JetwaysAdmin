    <script>
        const allOptions = {
            "1": "Bill to Company",
            "2": "Credit Card",
            "3": "CTA",
            "4": "BTA",
            "5": "UPI",
            "6": "Net Banking"
        };

        let rowIndex = 1;

        $(document).ready(function () {
            $('.mainDropdown').each(function () {
                const $this = $(this);
                const pair = $this.data('pair');

                $this.multiselect({
                    placeholder: '',
                    selectAll: true,
                    onOptionClick: function () {
                        syncDropdown(pair);
                        updateDisplayText($this);
                        toggleGatewaySection();
                    },
                    onControlClose: function () {
                        syncDropdown(pair);
                        updateDisplayText($this);
                        toggleGatewaySection();
                    },
                    afterRender: function () {
                        $this.next('.ms').find('.ms-selectall').remove();
                        updateDisplayText($this);
                    }
                });
            });

            $('.dropdownContainer').each(function () {
                const $this = $(this);
                $this.multiselect({
                    placeholder: '',
                    onOptionClick: function () {
                        updateDisplayText($this);
                    },
                    onControlClose: function () {
                        updateDisplayText($this);
                    },
                    afterRender: function () {
                        $this.next('.ms').find('.ms-selectall').remove();
                        updateDisplayText($this);
                    }
                });
            });

            $('.mainDropdown').each(function () {
                const pair = $(this).data('pair');
                syncDropdown(pair);
            });

            toggleGatewaySection();

            $('.add').on('click', function (e) {
                e.preventDefault();

                const radioName = `radio-btn-${rowIndex++}`;
                const newRow = document.createElement('tr');
                newRow.classList.add('payment-row');

                // Build <select> options safely
                let optionsHtml = '';
                for (const key in allOptions) {
                    optionsHtml += `<option value="${key}">${allOptions[key]}</option>`;
                }

                // Build radio buttons
                const gateways = [
                    'RazorPay', 'Cashfree', 'HDFC', 'AMEX',
                    'RazorPay Moto', 'HDFC Moto', 'RazorPay Direct',
                    'BillDesk', 'HDFC Smart'
                ];
                let radiosHtml = '';
                gateways.forEach(label => {
                    radiosHtml += `
                                                    <div class="form-check form-check-inline m-r-30">
                                                        <input class="form-check-input" type="radio" name="${radioName}" value="${label}" data-toggle="modal" data-target="#exampleModalCenter">
                                                        <label class="form-check-label">${label}</label>
                                                    </div>
                                                `;
                });

                newRow.innerHTML = `
                                                <td class="bdr-btm" style="padding:0;">
                                                    <div class="form-group" style="padding: 0; width: 220px;">
                                                        <select class="form-control langOpt" multiple="multiple">
                                                            ${optionsHtml}
                                                        </select>
                                                    </div>
                                                </td>
                                                <td>${radiosHtml}</td>
                                            `;

                const table = document.getElementById('paymentTable');
                const lastRow = table.querySelector('tbody tr:last-child');
                table.querySelector('tbody').insertBefore(newRow, lastRow);

                // Initialize plugin for new row
                const $newSelect = $(newRow).find('select.langOpt');
                $newSelect.multiselect({
                    placeholder: '',
                    afterRender: function () {
                        $newSelect.next('.ms').find('.ms-selectall').remove();
                        updateDisplayText($newSelect);
                    }
                });
            });
        });

        function syncDropdown(pair) {
            const main = $(`.mainDropdown[data-pair="${pair}"]`);
            const container = $(`.dropdownContainer[data-pair="${pair}"]`);
            const selected = main.val() || [];

            container.empty();
            selected.forEach(val => {
                container.append(`<option value="${val}">${allOptions[val]}</option>`);
            });

            container.multiselect('reload');
            updateDisplayText(container);
        }

        function updateDisplayText($select) {
            const selected = $select.val() || [];
            const text = selected.map(v => allOptions[v] || '').join(', ');
            $select.next('.ms').find('span').text(text);
        }

        function toggleGatewaySection() {
            const selected = $('.mainDropdown').val() || [];
            const hasBTC = selected.includes("1");
            const hasCC = selected.includes("2");

            if (hasBTC && hasCC) {
                $('#gatewaySection').show();
            } else {
                $('#gatewaySection').hide();
            }
        }
    </script>


