@using JetwaysAdmin.Entity
@model JetwaysAdmin.UI.ViewModel.MenuHeaddata

@{
    Layout = "~/Views/Shared/_MasterData.cshtml";
    var Data = Model;
}
<main id="main" class="main">
    <div class="pcoded-main-container" id="ShowDepartment">
        <div class="pcoded-wrapper">
            <!-- Page-header start -->
            <div class="page-header">
                <div class="page-block">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <div class="page-header-title">
                                <h5 class="m-b-10">Manage Departments</h5>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="#">Setting</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#">Manage Customers</a>
                                </li>
                                <li class="breadcrumb-item">
                                    Departments
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="pcoded-inner-content">
                <!-- Main-body start -->
                <div class="main-body">
                    <div class="page-wrapper">
                        <!-- Page-body start -->
                        <div class="page-body">
                            @if (TempData["DepartmentAdd"] != null)
                            {
                                <div class="alert alert-success" style="width:28%; background-color:#11c15b;color:#fff">
                                    <strong></strong> @TempData["DepartmentAdd"]
                                    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                                </div>
                            }
                            <div class="card">
                                <div class="card-block">
                                    <div class="d-flex justify-content-between m-b-10">
                                        <form class="form-material">
                                            <div class="form-group form-primary" style="width:280px;">
                                                <input type="text" name="footer-email" class="form-control">
                                                <span class="form-bar"></span>
                                                <label class="float-label"><i class="fa fa-search m-r-10"></i>Search</label>
                                            </div>
                                        </form>
                                        <div>
                                           
                                            <button id="adddepartment"  class="btn sml-btn-danger">+ Add New</button> 
                                            <button class="btn btn-primary sml-b" data-toggle="modal" data-target="#bulkUpload" type="button">+ Bulk Upload</button>
                                            <button class="btn btn-primary sml-b">Export</button>
                                        </div>
                                    </div>
                                    <div class="tab-content">
                                        <div class="tab-pane active table-border-style" id="flights1" role="tabpanel">
                                            <div class="table-responsive">
                                                <table class="table">
                                                    <thead>
                                                        <tr>
                                                            <th><button class="srt-btn" type="button" aria-label="commercials-name">Department Name</button></th>
                                                            <th><button class="srt-btn" type="button" aria-label="commercials-name">Department Code</button></th>
                                                            <th><button class="srt-btn" type="button" aria-label="commercials-name">Department Head</button></th>
                                                            <th><button class="srt-btn" type="button" aria-label="commercials-name">Users</button></th>
                                                            <th><button class="srt-btn" type="button" aria-label="commercials-name">Status</button></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody id="departmentTableBody">
                                                        @foreach (var item in Model.Customerdepartment)
                                                        {
                                                            <tr class="department-row" data-deptid="@item.DepartmentID">
                                                            <td>@item.DepartmentName</td>
                                                            <td>@item.DepartmentCode</td>
                                                            <td>NA</td>
                                                            <td>NA</td>
                                                            <td>True</td>
                                                        </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Page-body end -->
                <!-- Add New Popup Start -->
                <div class="modal fade" id="bulkUpload" tabindex="-1" role="dialog" aria-labelledby="bulkUploadTitle" aria-hidden="true" data-backdrop="static" data-keyboard="false">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="bulkUploadTitle">Bulk Upload Departments</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div>
                                    <p style="font-weight:700;">Add or edit Departments by uploading a CSV file</p>
                                    <p style="font-weight:700;">Note: Fields marked as [*] after column name are mandatory</p>
                                </div>
                                <div class="custom-file m-t-10 mb-3" style="width:auto;">
                                    <input type="file" class="custom-file-input" id="customFile" name="filename">
                                    <label class="custom-file-label" for="customFile" style="border-color: #0e93d8; color:#0e93d8;">Attach CSV </label>
                                </div>

                                <div>
                                    <p style="font-weight:700;">Not sure how to get started?</p>
                                    <p>Download a CSV file, then edit and upload the file</p>
                                </div>
                                <div class="m-t-15">
                                    <p style="font-weight:700;">Download blank <a href="#" style="color: #0e93d8;">CSV template</a></p>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" data-dismiss="modal">Upload</button>
                                <button class="btn btn-danger" data-dismiss="modal">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



@*<----AddDepartment----->*@
    <div class="pcoded-main-container" id="AddDepartment">
        <div class="pcoded-wrapper">
                <!-- Page-header start -->
                <div class="page-header">
                    <div class="page-block">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <div class="page-header-title">
                                    <h5 class="m-b-10">Add New Departments</h5>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <ul class="breadcrumb">
                                    <li class="breadcrumb-item">
                                        <a href="#">Setting</a>
                                    </li>
                                    <li class="breadcrumb-item">
                                        <a href="#">Manage Customers</a>
                                    </li>
                                    <li class="breadcrumb-item">
                                        Departments
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Page-header end -->
                <div class="pcoded-inner-content">
                    <!-- Main-body start -->
                    <div class="main-body">
                        <div class="page-wrapper">
                            <!-- Page-body start -->
                            <div class="page-body">
                                <div class="card">
                                    <div class="card-block">
                                    <form asp-controller="Departments" asp-action="AddDepartment" class="form-material form-row" method="post">
                                        <input type="hidden" name="LegalEntityCode" class="form-control" value="@ViewBag.LegalEntityCode">
                                        <input type="hidden" name="LegalEntityName" class="form-control" value="@ViewBag.LegalEntityName">
                                        <input type="hidden" name="IdLegal" class="form-control" value="@ViewBag.Id">
                                            <div class="form-group form-primary col-md-3">
                                            <input type="text" name="DepartmentName" class="form-control" required>
                                                <span class="form-bar"></span>
                                                <label class="float-label">Department Name<span>*</span></label>
                                            </div>
                                            <div class="form-group form-primary col-md-3">
                                            <input type="text"
                                                   id="DepartmentCode"
                                                   name="DepartmentCode"
                                                   class="form-control"
                                                   maxlength="6"
                                                   minlength="6"
                                                   required
                                                   oninput="validateDepartmentCode(this)">
                                                <span class="form-bar"></span>
                                            <label class="float-label">Department Code<span>*</span></label>
                                            <span id="deptCodeError" style="color: red; display: none; font-size: 13px;">
                                                Department code must be exactly 6 alphanumeric characters.
                                            </span>
                                            </div>
                                            <div class="form-group form-primary col-md-3">
                                                <input type="text" name="Reference-1" class="form-control">
                                                <span class="form-bar"></span>
                                                <label class="float-label">Reference 1</label>
                                            </div>
                                            <div class="form-group form-primary col-md-3">
                                                <input type="text" name="Reference-2" class="form-control">
                                                <span class="form-bar"></span>
                                                <label class="float-label">Reference 2</label>
                                            </div>
                                            <div class="form-group form-primary col-md-12 m-t-10" style="border-top:1px solid #dee2e6;"></div>
                                            <div class="form-group form-primary col-md-3 U-select">
                                                <div>
                                                    <div class="m-b-15" style="font-size:13px;">Department Head</div>
                                                    <div class="m-b-10" style="position:relative;">
                                                        <i class="fa fa-user-plus m-r-10" aria-hidden="true" style="color: #0e93d8; position: absolute; left: 7px; top: 5px;"></i><input type="text" name="assign-supervisor" placeholder="Assign Department Head" style="border: #eff1f4 1px solid; border-radius: 3px; padding-left: 27px; width: 217px;">
                                                    </div>
                                                    <div class="selected-items"></div>
                                                </div>
                                            </div>
                                            <div class="form-group form-primary col-md-3 U-select">
                                                <div>
                                                    <div class="m-b-15" style="font-size:13px;">Department Manager1</div>
                                                    <div class="m-b-10" style="position:relative;">
                                                        <i class="fa fa-user-plus m-r-10" aria-hidden="true" style="color: #0e93d8; position: absolute; left: 7px; top: 5px;"></i><input type="text" name="assign-supervisor" placeholder="Assign Department Manager1" style="border: #eff1f4 1px solid; border-radius: 3px; padding-left: 27px; width: 225px;">
                                                    </div>
                                                    <div class="selected-items"></div>
                                                </div>
                                            </div>
                                            <div class="form-group form-primary col-md-3 U-select">
                                                <div>
                                                    <div class="m-b-15" style="font-size:13px;">Department Manager2</div>
                                                    <div class="m-b-10" style="position:relative;">
                                                        <i class="fa fa-user-plus m-r-10" aria-hidden="true" style="color: #0e93d8; position: absolute; left: 7px; top: 5px;"></i><input type="text" name="Assign Department Manager2" placeholder="Assign Department Manager1" style="border: #eff1f4 1px solid; border-radius: 3px; padding-left: 27px; width: 225px;">
                                                    </div>
                                                    <div class="selected-items"></div>
                                                </div>
                                            </div>
                                            <div class="form-group form-primary col-md-12">
                                                <button id="AddNewDepartment" class="btn btn-primary waves-effect waves-light">Add New</button>
                                                <button class="btn btn-danger waves-effect waves-light">Cancel</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Page-body end -->
                </div>
                <div id="styleSelector"> </div>
        </div>
    </div>




</main>


<footer>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @section Scripts {
        <script>
            $(document).ready(function () {
                $('#departmentTableBody').on('click', '.department-row', function () {
                    var deptId = $(this).data('deptid');
                    if (deptId) {
                        var url = '@Url.Action("EditDepartment", "Departments")' + '?departmentId=' + deptId;
                        window.location.href = url;
                    }
                });
            });
        </script>
    }
<script>
    $('#langOpt').multiselect({
        columns: 1,
        texts: {
            placeholder: 'Associated Fare Type(s) *'
        }
    });
</script>
<script>
    $(function () {
        $(".select").select2();
    });
</script>
<script>
    $(function () {
        $(".date-main").datepicker({
            changeMonth: true,
            changeYear: true
        });
    });
</script>
<script>
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });


</script>
    <script>
        $(document).ready(function () {
            $('#AddDepartment').hide();
            $('#adddepartment').on('click', function () {
                $('#ShowDepartment').hide();
                $('#AddDepartment').show();
            });
        });
    </script>
    <script>
        function validateDepartmentCode(input) {
            const errorSpan = document.getElementById("deptCodeError");
            input.value = input.value.replace(/[^A-Za-z0-9]/g, '');
            if (input.value.length > 6) {
                input.value = input.value.slice(0, 6);
            }
            if (input.value.length !== 6) {
                errorSpan.style.display = "inline";
            } else {
                errorSpan.style.display = "none";
            }
        }
    </script>
</footer>